<?xml version="1.0" encoding="UTF-8" ?>
<document>
	<headline>Tools</headline>
	<paragraph>
		<title>Schwimm-Geschwindigkeits-Rechner</title>
		<text><![CDATA[
		<table width="350" cellpadding="3" border="0">
			<tr>
				<td>Standardstrecken</td>
				<td colspan="6">
					<select onclick="document.getElementById('distance_swimPaceCalculator').value = this.options[this.options.selectedIndex].value" style="width: 100%;">
						<option value="">-</option>
						<option value="500">500 m</option>
						<option value="1000">1.000 m</option>
						<option value="1500">1.500 m</option>
						<option value="2000">2.000 m</option>
					</select>
				</td>
			</tr>
			<tr>
				<td colspan="7"><hr/></td>
			</tr>
			<tr>
				<td>Strecke</td>
				<td colspan="5"><input type="text" id="distance_swimPaceCalculator" maxlength="5" style="width: 100%; text-align: center;" value="0"/></td>
				<td>m</td>
			</tr>
			<tr>
				<td>Zeit</td>
				<td>
					<input type="text" id="time_hh_swimPaceCalculator" maxlength="2" style="width: 100%; text-align: center;" value="00"/>
				</td>
				<td>
					:
				</td>
				<td>
					<input type="text" id="time_mm_swimPaceCalculator" maxlength="2" style="width: 100%; text-align: center;" value="00"/>
				</td>
				<td>
					:
				</td>
				<td>
					<input type="text" id="time_ss_swimPaceCalculator" maxlength="2" style="width: 100%; text-align: center;" value="00"/>
				</td>
				<td>hh:mm:ss</td>
			</tr>
			<tr>
				<td colspan="7"><hr/></td>
			</tr>
			<tr>
				<td rowspan="2" valign="top">Geschwindigkeit</td>
				<td colspan="5"><input type="text" id="result_swimPaceCalculatorMinPer100m" readonly="readonly" style="width: 100%; text-align: center;"/></td>
				<td>min/100m</td>
			</tr>
			<tr>
				<td colspan="5"><input type="text" id="result_swimPaceCalculatorKmPerHour" readonly="readonly" style="width: 100%; text-align: center;"/></td>
				<td>km/h</td>
			</tr>
			<tr>
				<td colspan="7"><hr/></td>
			</tr>
			<tr>
				<td colspan="7" align="right"><input type="submit" value="Berechnen" onclick="calculateSwimPace();"/></td>
			</tr>
		</table>
		]]></text>
	</paragraph>
